pipeline {
    agent any

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }

        stage("Build") {
            steps {
                bat "javac Calculator.java"  // For Windows agents
            }
        }

        stage("Success") {
            steps {
                echo "Build Successful"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '*.class', fingerprint: true
        }
    }
}
